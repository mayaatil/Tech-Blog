<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='row mt-4'>

    <h3>What's on your mind?</h3>

    <form class='form new-post-form'>
      <div class='form-group'>
        <label for='post-name'>Title:</label>
        <input class='form-input' type='text' id='post-name' name='post-name' />
      </div>
      <div class='form-group'>
        <label for='post-desc'>Text:</label>
        <textarea class='form-input' id='post-desc' name='post-desc'></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
    <div class='col-md-6 post-list'>
      <h3>Old Posts:</h3>

      {{#each posts as |post|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/edit/post/{{id}}'>{{post.title}}</a></h4>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='./js/profile.js'></script>